# ============================================================================
# SYSTEM 1 - Trading Node Environment Configuration (macOS)
# ============================================================================

NODE_ENV=production

# API Server Configuration
PORT=3000
HOST=0.0.0.0

# Signer Service Connection
SIGNER_URL=http://localhost:3001
SIGNER_TIMEOUT_MS=5000
SIGNER_RETRY_ATTEMPTS=3

# RPC Configuration (can override config.json)
SOLANA_RPC_HTTP=https://api.mainnet-beta.solana.com
SOLANA_RPC_WS=wss://api.mainnet-beta.solana.com

# Storage Configuration
STORAGE_PATH=./data
STORAGE_MAX_SIZE_MB=1000

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/trading-node.log
LOG_MAX_SIZE_MB=100
LOG_MAX_FILES=10
LOG_CONSOLE=true

# Performance Configuration
MAX_CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT_MS=30000
HEARTBEAT_INTERVAL_MS=5000

# Security
API_KEY=
CORS_ORIGIN=*
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=60000

# Feature Flags
ENABLE_WEBSOCKET=true
ENABLE_METRICS=true
ENABLE_DEBUG_ENDPOINTS=false

# macOS-Specific Settings
PROCESS_PRIORITY=0
USE_FSEVENTS=true

