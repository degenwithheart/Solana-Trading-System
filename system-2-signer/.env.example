# ============================================================================
# SYSTEM 2 - Signer Service Environment Configuration (macOS)
# ⚠️  CRITICAL: NEVER COMMIT THIS FILE WITH REAL VALUES
# ============================================================================

NODE_ENV=production

# Server Configuration (MUST be localhost on macOS)
PORT=3001
HOST=127.0.0.1

# Wallet Configuration
PRIVATE_KEY=
PUBLIC_KEY=

# Policy (JSON file)
POLICY_PATH=./policy.json

# Rate Limiting
MAX_TRANSACTIONS_PER_MINUTE=10
MAX_TRANSACTIONS_PER_HOUR=100
MAX_TRANSACTIONS_PER_DAY=500

# Transaction Validation
ENABLE_PROGRAM_ALLOWLIST=true
ALLOWED_PROGRAMS=
ENABLE_AMOUNT_LIMITS=true
MAX_TRANSACTION_AMOUNT_SOL=10.0

# Security
ENABLE_IP_ALLOWLIST=true
ALLOWED_IPS=127.0.0.1,::1
REQUIRE_API_KEY=true
API_KEY=
USE_KEYCHAIN=false
KEYCHAIN_SERVICE=solana-trading-signer-private-key

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/signer.log
LOG_MAX_SIZE_MB=50
LOG_MAX_FILES=10
LOG_CONSOLE=true
LOG_TRANSACTIONS=true

# Performance
REQUEST_TIMEOUT_MS=10000
SIGNATURE_TIMEOUT_MS=5000
